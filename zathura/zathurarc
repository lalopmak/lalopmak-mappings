## UNCOMMENT IF APPLICABLE:
## direction bug in version 0.12 keeps this from working
## Instead, the defaults were manually changed in config.c
map k search next
map K search previous



set recolor true
set recolor_darkcolor #BDE090
set recolor_lightcolor #000000
set defaultbg_color #000000

map b open
map o goto
map t follow


map e scroll down
map y scroll up
map u scroll half-up
map n scroll half-down

map E scroll left
map Y scroll right

map U zoom in
map N zoom out

map r reload
map R rotate rotate-ccw


map w toggle_index
map f toggle_fullscreen

#map z zoom height



map q quit
set scrollbars true

set adjust-open width
map <Space> adjust_window

